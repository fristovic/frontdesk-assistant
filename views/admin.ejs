<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <div class="content-box">
  <%- include("./partials/nav.ejs") %>

  <div class="vl"></div>
  
  <div class="reportView">
    <h2>Reports:</h2>
      <% if (reports.length > 0) { %>
        <% reports.forEach(report => { %>
          <a class="single" style="color: black; text-decoration: none;" href="/admin/<%= report._id %>">
            <h3 class="reportType"><%= report.reportType %></h3>
            <h5 class="description"><%= report.description %></h5>
            <p class="roomNo"> Room number: <%= report.roomNumber %></p>
            <p class="createdAt"><%= report.createdAt.getFullYear() + "-" + (report.createdAt.getMonth() + 1) + "-" + report.createdAt.getDate() + " " + report.createdAt.getHours() + ":" + report.createdAt.getMinutes() + ":" + report.createdAt.getSeconds() %></p>
          </a>
          <% }) %>
        <% } else { %>
      <p>There are no reports to display...</p>
    <% } %>
  </div>

</div>

<%- include("./partials/footer.ejs") %>

</body>
</html>